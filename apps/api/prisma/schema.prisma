generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid      String @id @default(uuid())
  username String
  email    String
  password String
  admin    Admin?
}

model Admin {
  uid  String @id
  user User   @relation(fields: [uid], references: [uid], onDelete: Cascade)
}

model Project {
  uid      String            @id @default(uuid())
  name     String
  preview  String
  link     String
  featured FeaturedProject?
}

model FeaturedProject {
  uid     String   @id
  project Project @relation(fields: [uid], references: [uid], onDelete: Cascade)
}
